<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        tools:layout_editor_absoluteY="-151dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/announcementsBtn"
                android:foregroundGravity=""
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:clickable="true"
                android:layout_marginTop="230dp"
                android:layout_marginEnd="12dp"
                android:backgroundTint="#F292A7E4"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_notifications_black_24dp" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/drawfood"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/food_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:padding="5dp"
                    android:text=" Let's see what are\n we going to eat\n today..."
                    android:textColor="@color/btnviolet"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imageView" />

                <!--        <androidx.cardview.widget.CardView-->
                <!--            -->
                <!--            android:layout_width="wrap_content"-->
                <!--            android:layout_height="140dp"-->
                <!--            android:background="@drawable/group_54"-->
                <!--            -->
                <!--            app:cardElevation="12dp"-->
                <!--            app:layout_constraintEnd_toEndOf="parent"-->
                <!--            >-->

                <FrameLayout
                    android:id="@+id/breakfast_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/food_title">

                    <ImageView
                        android:id="@+id/breakfast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:elevation="12dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/group_54" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24sp"
                        android:elevation="14dp"
                        android:padding="9dp"
                        android:text="Breakfast"
                        android:textColor="@color/btnviolet"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="240sp"
                        android:elevation="14dp"
                        android:padding="9dp"
                        android:text="8:00-10:00 AM"

                        android:textColor="@color/dark_blue"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="88dp"
                        android:elevation="14dp"
                        android:text="Veg fingures, Omelette,
 Bread-Butter,
Poha,Milk"

                        android:textColor="@color/dark_blue"
                        android:textSize="18sp" />


                </FrameLayout>

                <FrameLayout
                    android:id="@+id/lunch_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/breakfast_lay">

                    <ImageView
                        android:id="@+id/lunch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:elevation="12dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/g1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24sp"
                        android:elevation="14dp"
                        android:padding="9dp"
                        android:text="Lunch"
                        android:textColor="@color/dark_blue"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="240sp"
                        android:elevation="14dp"
                        android:padding="9dp"
                        android:text="8:00-10:00 AM"

                        android:textColor="@color/dark_blue"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="88dp"
                        android:elevation="14dp"
                        android:text="Veg fingers, Omelette,
 Bread-Butter,
Poha,Milk"

                        android:textColor="@color/dark_blue"
                        android:textSize="18sp" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/snacks_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lunch_lay">

                    <ImageView
                        android:id="@+id/snacks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:elevation="12dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/group_56" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24sp"
                        android:elevation="14dp"
                        android:padding="9dp"
                        android:text="Snacks"
                        android:textColor="@color/dark_blue"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="240sp"
                        android:elevation="14dp"
                        android:padding="9dp"
                        android:text="8:00-10:00 AM"

                        android:textColor="@color/dark_blue"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="88dp"
                        android:elevation="14dp"
                        android:text="Veg fingures, Omelette,
 Bread-Butter,
Poha,Milk"

                        android:textColor="@color/dark_blue"
                        android:textSize="18sp" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/dinner_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/snacks_lay">

                    <ImageView
                        android:id="@+id/dinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:elevation="12dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/group_58" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24sp"
                        android:elevation="14dp"
                        android:padding="9dp"
                        android:text="Dinner"
                        android:textColor="@color/dark_blue"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="240sp"
                        android:elevation="14dp"
                        android:padding="9dp"
                        android:text="8:00-10:00 AM"

                        android:textColor="@color/dark_blue"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="88dp"
                        android:elevation="14dp"
                        android:text="Veg fingures, Omelette,
 Bread-Butter,
Poha,Milk"

                        android:textColor="@color/dark_blue"
                        android:textSize="18sp" />

                </FrameLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--        <TextView-->
                    <!--            android:background="@color/lightGrey"-->
                    <!--            android:id="@+id/text1"-->
                    <!--            android:layout_width="wrap_content"-->
                    <!--            android:layout_height="wrap_content"-->
                    <!--            android:text=""-->
                    <!--            android:textColor="@color/dark_blue"-->
                    <!--            android:textSize="24dp"-->
                    <!--            app:layout_constraintTop_toTopOf="parent"-->
                    <!--            android:layout_marginStart="20dp"-->
                    <!--            app:layout_constraintStart_toStartOf="parent"/>-->


                    <Button
                        android:id="@+id/leave_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:layout_marginEnd="50dp"
                        android:backgroundTint="@color/dark_blue"
                        android:drawableEnd="@drawable/baseline_arrow_forward_24"
                        android:drawableTint="@color/white"
                        android:text="Apply for mess leave"
                        android:textColor="@color/white"
                        app:layout_constraintBaseline_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <Button
                        android:id="@+id/sick_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="50dp"
                        android:backgroundTint="@color/dark_blue"
                        android:drawableEnd="@drawable/baseline_arrow_forward_24"
                        android:drawableTint="@color/white"
                        android:text="Apply for sick food?"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/leave_btn"

                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>